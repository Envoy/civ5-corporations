<GameData>
	<Table name="CorporationSettings">
		<Column name="Type" primarykey="true" type="Text" />
		<Column name="Value" type="integer" default="0"/>
	</Table>
	<CorporationSettings>
		<!-- Base settings -->
		
		<!-- -1 will turn off financial update notifications -->
		<Row>
			<Type>FinancialNotificationUpdateTurns</Type>
			<Value>10</Value>
		</Row>

		<!-- Corporation spread pressure settings -->
		<Row>
			<Type>BasePressureModifier</Type>
			<Value>100</Value>
		</Row>
		<Row>
			<Type>OpenBordersPressureModifier</Type>
			<Value>25</Value>
		</Row>
		<Row>
			<Type>ClosedBordersPressureModifier</Type>
			<Value>-75</Value>
		</Row>
		<Row>
			<Type>FriendsPressureModifier</Type>
			<Value>10</Value>
		</Row>
		<Row>
			<Type>AlliesPressureModifier</Type>
			<Value>15</Value>
		</Row>	
	</CorporationSettings>
</GameData>